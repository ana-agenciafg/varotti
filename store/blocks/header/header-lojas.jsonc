  "rich-text#header-lojas-content-info-4": {
    "title": "Botao 2",
    "props": {
      "text": "<a class='vtex-rich-text-0-x-link' href='https://maps.app.goo.gl/Hmj7igHr6hc4eDxC8' target='_blank'>Abrir no Google Maps</a>",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass":  ["font-16px","btn-maps", "margin-0"]
    }
  }
}